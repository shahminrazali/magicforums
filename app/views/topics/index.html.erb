<div class="topics">

  <div class="background">
    <h1>Topics</h1>
  </div>


  <nav>
  <%=paginate @topics %>
  </nav>
  <div id="topic-show-container" class="topic-parent text-center">
    <% @topics.each do |topic| %>
    <%= render partial: "topic", locals: {topic: topic} %>
    <%end%>
  </div>



  <div id="topic-form-container">
    <%= render partial: "form", locals: {topic: @topic} %>
  </div>
</div>
