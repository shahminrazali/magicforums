<div class="posts">
  <div class="background">
    <h3><%= @post[:title] %></h3>
    <h4><%= @post[:body] %></h4>
  </div>

  <div class="posts button-bar">
    <%= link_to "NEW COMMENT", new_topic_post_comment_path(@topic, @post), class:"button-set" %>
  </div>

  <div id="comments">
    <% @comments.each do |comment| %>
    <h3><%= comment.body %></h3>
    <% end %>
  </div>

</div>


<%= form_for(@comment, url: topic_post_comments_path(@topic, @post), html: { id: "comment-create-form"}) do |f| %>
  <h1 class="text-center">
    Create Comment
  </h1>

  <div class="form-group">
    <%= f.label :text_field, "Body" %>
    <%= f.text_field :body, id: "post_body_field", class: "form-control" %>
  </div>

  <div class="form-group">
      <h4 class="text-center"> Post Image </h4>
      <div id="preview-image">
        <% if @post.image? %>
          <%= image_tag @post.image, class: "img-settings img-responsive center-block" %>
        <% end %>
      </div>
  </div>

  <div class="form-group">
    <%= f.file_field :image, id: "comment_image_field", class: 'form-control image-uploader' %>
  </div>

  <div class="form-group text-center">
      <%= f.submit "Create Comment", class: " btn btn-lg btn-success" %>
  </div>
<%end%>
