<div id="post" data-id="<%=post.id%>">

    <%= link_to topic_post_comments_path(post.topic, post), class:"topic-child text-center" do %>
    <h5> <%= post.title %></h5>
    <h6> <%= post.body %> </h6>
    <% if post.image? %>
      <%= image_tag post.image, class: "img-settings img-responsive center-block" %>
    <% end %>
    <%end%>


    <div class="box">
      <%= link_to fa_icon("pencil 1x"), edit_topic_post_path(@topic, post), remote:true %>
      <%= link_to fa_icon("trash-o 1x"), topic_post_path(@topic, post), method: :delete, remote: true, data: {confirm: "Delete?"} %>
    </div>

</div>
