<div class="topics">

<div class="background">
<h1>Topics</h1>
</div>

<div class="topic-parent text-center">
<% @topics.each do |topic| %>
    <%= link_to topic_path(topic) do %>
        <div class="topic-child">
            <h3><%= topic.title %></h3>
            <h5><%= topic.description %></h5>
        </div>
      <% end %>
  <% end %>
</div>

</div>
